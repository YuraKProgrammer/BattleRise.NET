<Window x:Class="BattleRise.DesktopClient.Windows.StartGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleRise.DesktopClient.Windows"
        mc:Ignorable="d"
        Title="Начать игру" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Продолжить" Height="20" Click="OnContinueClick" x:Name="button_continue"/>
        <Button Content="Начать новую игру" Height="20" Margin="0,7,0,57" Click="OnNewClick"/>
        <Button Content="Выйти из аккаунта" Height="20" Margin="0,57,0,7" Click="OnExitClick"/>
    </Grid>
</Window>
