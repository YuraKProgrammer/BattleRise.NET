<Window x:Class="BattleRise.DesktopClient.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleRise.DesktopClient.Windows"
        mc:Ignorable="d"
        Title="О программе" Height="450" Width="800" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="10" Text="Эта программа создана Калантырем Ю.С. Версия: " x:Name="About" FontSize="20" Grid.Row="0"/>
        <TextBlock Margin="10" Text="Это игра по типу 'Стенка на стенку'. Задача игры: Проходить уровни" FontSize="20" Grid.Row="1"/>
    </Grid>
</Window>
