<Window x:Class="BattleRise.DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleRise.DesktopClient"
        mc:Ignorable="d"
        Title="BattleRise Начало" Height="400" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock Text="Версия" Margin="0,0,100,266" x:Name="text_version"/>
        <TextBlock Text="BattleRise" Margin="0,23,132,244"/>
        <Button Content="Войти..." Height="20" Margin="0,45,0,219" Click="OnLoginClick"/>
        <Button Content="Зарегистрироваться..." Height="20" Margin="0,70,0,194" Click="OnRegisterClick"/>
        <Button Content="О программе..." Height="20" Margin="0,95,0,169" Click="OnAboutClick"/>
    </Grid>
</Window>
