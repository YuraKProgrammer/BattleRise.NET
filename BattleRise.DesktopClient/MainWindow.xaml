<Window x:Class="BattleRise.DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleRise.DesktopClient"
        mc:Ignorable="d"
        Title="BattleRise Начало" Height="235" Width="384" WindowStartupLocation="CenterOwner">
    <Grid>
        <Image Source="D:\images\main.jpg"/>
        <TextBlock Text="Версия" x:Name="text_version" FontSize="20" Margin="0,0,0,191" Foreground="White"/>
        <TextBlock Text="BattleRise" FontSize="20" TextAlignment="Center" Margin="0,27,0,157" Foreground="White"/>
        <Button Content="Войти..." Click="OnLoginClick" Margin="0,35,0,0" Grid.RowSpan="2" Height="30"/>
        <Button Content="Зарегистрироваться..." Click="OnRegisterClick" Height="30" Margin="0,75,0,109"/>
        <Button Content="О программе..." Click="OnAboutClick" Height="30" Margin="0,145,0,39"/>
    </Grid>
</Window>
